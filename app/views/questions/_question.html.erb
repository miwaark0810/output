<div class="card">
  <div class="card__body">
    <%= image_tag question.subject, class: "card__img" %>
    <%= link_to question.title, question_path(question.id), class: :card__title, method: :get%>
    <p class="card__summary">
      <%= question.text %>
    </p>
    <%= link_to "by #{question.user.nickname}", user_path(question), class: :card__user, method: :get %>
  </div>
</div>

