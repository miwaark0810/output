<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @post.title%>
      </p>
      <%= link_to "by #{@post.user.nickname}", "#", class: :prototype__user%>

      <% if user_signed_in? && current_user.id == @post.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_post_path(@post.id), class: :prototype__btn, method: :get%>
          <%= link_to "削除する", post_path(@post.id), class: :prototype__btn, method: :delete %>
        </div>
      <% end %>
      
      <div class="prototype__image">
        <%= image_tag @post.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">内容</p>
          <p class="detail__message">
            <%= @post.text %>
          </p>
      </div>
      <div class="prototype__comments">
          <% if user_signed_in? %>
           <%= form_with(model: [@post, @comment], local: true) do |f| %>
            <div class="field">
              <%= f.label :text, "コメント" %><br />
              <%= f.text_field :text %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn %>
            </div>
           <% end %> 
          <% end %>
        <ul class="comments_lists">
          <% if @comments %>
           <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.text%>
              <%= link_to "(#{comment.user.nickname})", root_path, class: :comment_user %>
            </li>
           <% end %>
         <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
