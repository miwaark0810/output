<div class="card">
  <div class="card__body">
    <%= image_tag post.image, class: "card__img" %>
    <%= link_to post.title, post_path(post.id), class: :card__title, method: :get%>
    <p class="card__summary">
      <%= post.text %>
    </p>
    <%= link_to "by #{post.user.nickname}", user_path(post), class: :card__user, method: :get %>
    <% if user_signed_in? %>
      <% if current_user.already_favorited?(post) %>
        <%= link_to post_favorites_path(post), method: :delete do %>
          <i class="fas fa-heart"></i>
        <% end %>
      <% else %>
        <%= link_to post_favorites_path(post), method: :post do %>  
          <i class="far fa-heart"></i>
        <% end %>
      <% end %>
      <%= post.favorites.count%>
    <% end %>
  </div>
</div>

