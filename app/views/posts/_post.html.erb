<div class="card">
  <div class="card__body">
    <%= image_tag post.image, class: "card__img" %>
    <%= link_to post.title, post_path(post.id), class: :card__title, method: :get%>
    <p class="card__summary">
      <%= simple_format(post.text) %>
    </p>
    <%= link_to "by #{post.user.nickname}", user_path(post.user.id), class: :card__user, method: :get %>
    <div id="favorites_buttons_<%= post.id %>">
      <%= render partial: 'favorites/favorite', locals: { post: post }%>
    </div>
  </div>
</div>

