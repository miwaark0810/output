<div class="card">
  <div class="card__body">
    <%= image_tag post.image, class: "card__img" %>
    <%= link_to post.title, post_path(post.id), class: :card__title, method: :get%>
    <p class="card__summary">
      <%= post.text %>
    </p>
    <%= link_to "by #{post.user.nickname}", root_path, class: :card__user%>
  </div>
</div>

